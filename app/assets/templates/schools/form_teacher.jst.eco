<h2>Add new teacher</h2>

<form id="new_teacher">
	<div class="firstname-wrapper">
		<div class="form-group">
			<label for="firstname">Firstname:</label>
			<input type="text" name="firstname" id="new_teacher_firstname" placeholder="Enter firstname">
		</div>
	</div>

	<div class="school_id-wrapper">
		<div class="form-group">
			<label for="school_id">School id:</label>
			<input type="text" name="school_id" id="new_teacher_school_id" placeholder="Enter school_id">
		</div>
	</div>

	<button type="submit" class="btn btn-success">Add teacher</button>
	
</form>

<div class="link_wrapper">
  <a href="/#teachers_index" class="teachers_index btn btn-default" role="button">Back</a>
	<a href="/" class="btn btn-default" role="button">Home</a>
</div>
